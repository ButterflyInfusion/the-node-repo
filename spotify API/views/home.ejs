<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fab fa-spotify"></i> Spotify Search</h1>
       
        <form action="/albums" method="POST">
          <div class="form-group">
            <label for="query">Artist Name</label>
            <input
              type="text"
              id="query"
              name="query"
              class="form-control"
              placeholder="Enter Artist Name"
            />
          </div>
          <br>
          <div class="form-group">
            <label for="filter">Filter</label>
            <input
              readonly
              id="filter"
              name="filter"
              value="albums"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <br>
          <button type="submit" class="btn btn-primary btn-block">Search</button>
        </form>
        <p class="lead mt-4">
          Thirsty? <a href="https://bit.ly/3Ig0YCT">Drink Water</a>
        </p>
      </div>
    </div>
  </div>