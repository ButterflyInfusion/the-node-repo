<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-globe">&nbsp;</i>UrlShortener</h1>
        <form action="/url/shorten" method="POST">
          <div class="form-group">
            <label for="longUrl">Long Url</label>
            <input
              type="text"
              id="longUrl"
              name="longUrl"
              class="form-control"
              placeholder="Enter URL"
            />
          </div>
          <br>
          <button type="submit" class="btn btn-primary btn-block">Shorten!</button>
        </form>
      </div>
    </div>
  </div>